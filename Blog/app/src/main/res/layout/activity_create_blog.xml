<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:orientation="vertical">

    <!-- Chọn hình ảnh -->
    <ImageView
        android:id="@+id/blogImageView"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        android:background="@android:color/darker_gray"
        android:layout_marginBottom="16dp"/>

    <Button
        android:id="@+id/selectImageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Chọn Ảnh"
        android:backgroundTint="@color/teal_700"
        android:textColor="@android:color/white"
        android:layout_gravity="center_horizontal"/>

    <!-- Nhập Tiêu Đề -->
    <EditText
        android:id="@+id/blogTitleInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Tiêu đề Blog"
        android:padding="12dp"
        android:background="@android:color/white"
        android:layout_marginTop="12dp"/>

    <!-- Nhập Mô Tả Ngắn -->
    <EditText
        android:id="@+id/blogShortDescInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Mô tả ngắn"
        android:padding="12dp"
        android:background="@android:color/white"
        android:layout_marginTop="12dp"/>

    <!-- Nhập Nội Dung Blog -->
    <EditText
        android:id="@+id/blogLongDescInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nội dung Blog"
        android:padding="12dp"
        android:minHeight="200dp"
        android:background="@android:color/white"
        android:gravity="top"
        android:inputType="textMultiLine"
        android:layout_marginTop="12dp"/>

    <!-- Nút Lưu Blog -->
    <Button
        android:id="@+id/saveBlogButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/material_dynamic_neutral60"
        android:padding="12dp"
        android:text="Lưu Blog"
        android:textColor="@android:color/white"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"/>

</LinearLayout>
